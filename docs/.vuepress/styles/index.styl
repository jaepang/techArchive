@import url('https://fonts.googleapis.com/css?family=Pacifico|Righteous&display=swap');
@import url('https://fonts.googleapis.com/css?family=Gugi&display=swap');
/* Home */
#main-title {
	font-family: 'Pacifico', 'Gugi', cursive;
}
.home .hero .description {
	color: #8996AD !important;
}
.home .features h2 {
	color: #16233A !important;
}
.home .features p {
	color: #1A2943 !important;
}
.home .features {
	max-width: 740px;
	margin-right: auto;
	margin-left: auto;	
}

/* navbar */
.site-name {
    font-family: 'Pacifico', cursive;
}

/* sidebar */
.sidebar-heading {
    color: rgba($darkTextColor, 0.54) !important;
}
.sidebar-heading.open, 
.sidebar-heading:hover {
    color: inherit !important;
}

/* main articles */
.theme-default-content {
	padding-left: 0 !important
	padding-right: 0 !important
}
@media screen and (max-width: 750px) {
	.page {
		padding-left: 1rem !important
		padding-right: 1rem !important
	}
}
.page h1 {
	font-family: 'Gugi', 'Pacifico', cursive;
	font-size: 56px;
	padding-bottom: 3%;
	border-bottom: 12px solid #f8ba05;
	border-bottom-right-radius: 15%;
	margin-block-end: 1.5rem;
}
.octicon .octicon-link {
	color: #283f69 !important;
}
a.header-anchor {
	margin-left: -20px !important;
	padding-right: 0 !important;
}

/* footer contents */
.post-meta-tags {
	margin-left: auto !important 
	margin-right: auto !important
	max-width: 740px
}
.vssue {
    max-width: 740px;
    margin: 0 auto;
}